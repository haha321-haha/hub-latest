{
  "name": "periodhub-health",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "check-client-usage": "node scripts/check-client-components.js",
    "build:unsafe": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "hydration-check": "node scripts/hydration-check.js",
    "hydration-check:enhanced": "node scripts/enhanced-hydration-check.js",
    "health-check": "node scripts/health-check.js",
    "health-check:full": "node scripts/health-check.js && npm run hydration-check:enhanced",
    "clean-build": "rm -rf .next node_modules/.cache .turbo && npm cache clean --force && npm run build",
    "pre-deploy": "npm run hydration-check && node scripts/pre-deploy-check.js",
    "standardized-fix": "./scripts/standardized-hydration-fix.sh",
    "generate-pdfs": "node scripts/generate-pdfs.js",
    "deploy:vercel": "./scripts/deploy.sh vercel",
    "deploy:github": "./scripts/deploy.sh github",
    "deploy:static": "./scripts/deploy.sh static",
    "check:deployment": "node scripts/check-deployment.js",
    "build:static": "cp next.config.static.js next.config.js && npm run build",
    "preview": "npm run build && npm run start",
    "validate:translations": "node scripts/validate-translations.js",
    "i18n:extract": "node scripts/extract-translation-keys.js",
    "i18n:extract:v2": "node scripts/extract-translation-keys-v2.js",
    "i18n:sync": "node scripts/sync-translation-keys.js",
    "i18n:test": "node scripts/test-i18n.js",
    "i18n:validate": "npm run i18n:extract && npm run i18n:sync && npm run i18n:test",
    "migrate:translations": "node scripts/migrate-translations.js",
    "fix:translations": "npm run migrate:translations && npm run validate:translations",
    "test:translations": "jest tests/translation-system.test.js",
    "test:translations:e2e": "jest tests/e2e/translation-e2e.test.js",
    "quality:translations": "node scripts/translation-quality-check.js",
    "check:translations": "npm run fix:translations && npm run test:translations && npm run quality:translations",
    "optimize:core-web-vitals": "node scripts/core-web-vitals-optimizer.js",
    "optimize:images": "node scripts/optimize-images.js",
    "check:mobile": "node scripts/mobile-responsive-checker.js",
    "test:performance": "node scripts/performance-test.js",
    "fix:icons": "node scripts/fix-icons.js",
    "performance:full": "npm run optimize:core-web-vitals && npm run optimize:images && npm run check:mobile && npm run test:performance",
    "performance:quick": "npm run optimize:core-web-vitals && npm run test:performance",
    "seo:optimize": "node scripts/seo-optimizer.js",
    "seo:check": "node scripts/seo-check.js",
    "seo:analyze": "npm run seo:check && npm run seo:optimize && echo '📊 SEO分析完成，请查看生成的报告文件'",
    "seo:full": "npm run seo:analyze && npm run build && echo '🚀 SEO优化和构建完成'",
    "lighthouse": "npm run build && npm run start & sleep 5 && npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html && pkill -f 'next start'"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "gray-matter": "^4.0.3",
    "immer": "^10.1.1",
    "mermaid": "^11.9.0",
    "next": "^14.2.31",
    "next-intl": "^3.0.0",
    "pdf-parse": "^1.1.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "styled-jsx": "^5.1.7",
    "tailwind-merge": "^2.6.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/chart.js": "^2.9.41",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.10",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.21",
    "critters": "^0.0.23",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.2.21",
    "glob": "^11.0.2",
    "jest": "^30.0.3",
    "lucide-react": "^0.539.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "puppeteer": "^24.16.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.9.2"
  }
}
